<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.funweb.mappers.recipeMapper">

	<select id="getMaxNum" resultType="java.lang.Integer">
		select max(num) from recipe
	</select>

	<select id="getBoardCount" resultType="java.lang.Integer">
		select count(*) from recipe
	</select>

	<insert id="writeBoard">
		insert into recipe(num,name,pass,subject,content)
		values(#{num}, #{name}, #{pass}, #{subject}, #{content})
	</insert>
	
	<select id="getBoardList" resultType="com.funweb.domain.BoardBean">
		select * from recipe order by num desc limit #{startRow},#{pageSize}
	</select>
	
	<select id="getBoard" resultType="com.funweb.domain.BoardBean">
		select * from recipe where num= #{num}
	</select>
	
	<update id="updateBoard">
		update recipe set subject=#{subject}, content=#{content} where num=#{num}
	</update>
	
	<delete id="deleteBoard">
		delete from recipe where num=#{num}
	</delete>

</mapper>